{
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/next",
            "config": {
                "installCommand": "pnpm install --no-frozen-lockfile",
                "buildCommand": "prisma generate && prisma migrate deploy && next build"
            }
        }
    ],
    "build": {
        "env": {
            "PRISMA_GENERATE_DATAPROXY": "true",
            "NEXT_DISABLE_ESLINT": "1"
        }
    }
}